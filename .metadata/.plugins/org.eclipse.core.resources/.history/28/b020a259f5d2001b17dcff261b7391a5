package GBBGame;

class match {
	int GN, win, draw, lose;	//GN : Game Number 게임판수 
	
	void MatchGame(String my, String com){
		if(my.equals(com)) {
			System.out.println("비겻습니다.");
			draw++;
		}else if (my.equals("가위") &&com.equals("보") || my.equals("바위") && com.equals("가위")
				|| my.equals("보") && com.equals("바위")) {
			System.out.println("유저가 이겼습니다.");
			win++;
		}else {
			System.out.println("컴퓨터가 이겼습니다.");
			lose++;
		}
	}
	
}