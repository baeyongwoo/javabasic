package constructor;

public class BasketballPlayer {

	public int ki;
	public int jump;
	
	public BasketballPlayer(int ki, int jump) {
		super();
		this.ki = ki;
		this.jump = jump;
		System.out.println("선수의 키 : " + ki + " 점프력 : " + jump);
	}


	public void dumk() {
		System.out.println("----------덩크슛의 조건 --------------");
		System.out.println("키 + 점프력 300이상");
		if((ki + jump) >= 300) {
			System.out.println("덩크슛에 성공했습니다.");
		}else System.out.println("골대에 닿지 않았습니다.");
	}
}
