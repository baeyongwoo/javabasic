package structure;

public class PersonClass {
	//사람의 정보
	public String name;
	public int age;
	public String pNum;
	public String address;
	public boolean job;
	
	public PersonClass(String name, int age, String pNum, String address, boolean job) {
		super();
		this.name = name;
		this.age = age;
		this.pNum = pNum;
		this.address = address;
		this.job = job;
	}

	//추가로 아까의 조회 메서드를 생성
	//클래스 내부에 생성할 대는 static이 필요 없다
	public void  Personinfo(PersonClass p) {
		System.out.println(p.name);
		System.out.println(p.age);
		System.out.println(p.pNum);
		System.out.println(p.address);
		System.out.println(p.job);
	}
}
