package Interaction.game;

public class krilla {
	private int hp;
	private int atk;
	private int def;
	
	public void krila() {
		this.hp = 50;
		this.atk = 10;
		this.def = 3;
	}
	
	public void doBattle(int uAtk) {
		this.hp = (this.hp + this.def) - uAtk;
		if(this.hp <= 0) {
			System.out.println("이 드래곤은 이미 죽었습니다.");
		}
	}
	
	public int getAtk() {
		return this.atk;
	}
	public int getHp() {
		return this.hp;
	}
}
