package Interaction.game;

public class User {
	private int hp;
	private int mp;
	private int atk;
	private int def;
	private int lv;
	private int exp;
	
	public User(int hp, int mp, int atk, int def, int lv, int exp) {
		
		this.hp = hp;
		this.mp = mp;
		this.atk = atk;
		this.def = def;
		this.lv = lv;
		this.exp = exp;
	}
	
	public void showStatus() {
		System.out.println("체력 : " + getHp());
		System.out.println("마나 : " + getMp());
		System.out.println("공격력 : " + getAtk());
		System.out.println("방어력 : " + getDef());
		System.out.println("레벨 : " + getLv());
		System.out.println("경험치 : " + getExp());
	}
	

	public int getHp() {
		return hp;
	}

	public void setHp(int hp) {
		this.hp = hp;
	}

	public int getMp() {
		return mp;
	}

	public void setMp(int mp) {
		this.mp = mp;
	}

	public int getAtk() {
		return atk;
	}

	public void setAtk(int atk) {
		this.atk = atk;
	}

	public int getDef() {
		return def;
	}

	public void setDef(int def) {
		this.def = def;
	}

	public int getLv() {
		return lv;
	}

	public void setLv(int lv) {
		this.lv = lv;
	}

	public int getExp() {
		return exp;
	}

	public void setExp(int exp) {
		this.exp = exp;
	}

	
	
}
