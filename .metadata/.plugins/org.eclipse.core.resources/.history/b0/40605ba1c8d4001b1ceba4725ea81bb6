package Interaction.game;

public class night {
	//체력, 공격력, 방어력, 마나, 레벨, 경험치
	private int hp = 100;
	private int atk = 30;
	private int amor = 10;
	private int mp = 50;
	private int level = 1;
	private int exp = 0;


	public night() {
		this.hp = hp;
		this.atk = atk;
		this.amor = amor;
		this.mp = mp;
		this.level = level;
		this.exp = exp;
	}

	public int getHp() {
		return hp;
	}
	public void setHp(int hp) {
		this.hp = hp;
	}
	public int getAtk() {
		return atk;
	}
	public void setAtk(int atk) {
		this.atk = atk;
	}
	public int getAmor() {
		return amor;
	}
	public void setAmor(int amor) {
		this.amor = amor;
	}
	public int getMp() {
		return mp;
	}
	public void setMp(int mp) {
		this.mp = mp;
	}
	public int getLevel() {
		return level;
	}
	public void setLevel(int level) {
		this.level = level;
	}
	public int getExp() {
		return exp;
	}
	public void setExp(int exp) {
		this.exp = exp;
	}

	public void hunt_monsterA(monsterA a) {
		//전투
		System.out.println("=================");
		System.out.println("몬스터A가 생성되었습니다. 체력은 " + a.getAhp());
		int monster_die_hp = 0;
		while(true) {
			if(getHp() > 0) {
				System.out.println("========================");
				System.out.println("몬스터A에게 " + getAtk() + "만큼 데미지 넣었습니다.");


				if(a.getAhp() <= monster_die_hp) {
					System.out.printf("몬스터 A의 체력이 " + a.getAhp() + "에서 ");
					a.setAhp(a.getAhp() - getAtk());
					System.out.println(a.getAhp() + "되었습니다.");
					System.out.println("몬스터A가 " + a.getAatk() + " 데미지를 플레이에게 데미지를 주었습니다.");
					setHp(getHp() - a.getAatk());
					System.out.println("플레이어의 체력이 " + getHp() + " 되었습니다.");
					
				}else {
					a.setAhp(0);
					setExp(getExp() + 10);
					System.out.println("몬스터 A를 잡았습니다. 경험치" + getExp() + "가 되엇습니다.");
					return;
				}
			}else {
				System.out.println("플레이어가 사망하였습니다.");
				return;
			}

			}//플레이어가 살아 있을때 로직
	}

}
