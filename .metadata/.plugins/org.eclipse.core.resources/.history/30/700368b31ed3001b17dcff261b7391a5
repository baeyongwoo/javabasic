package superclass;
//초음속 비행기는 비행기를 상속
public class SuperSonicAirplane extends Airplane{
	//초음속 비행기도 일반 비행기처럼 속도를 사용
	//따라서 변수는 추가로 정의x
	
	public SuperSonicAirplane(int s) {
		//Airplane의 생성자는 상속되지 않는다
		//따라서 부모쪽의 생성자라는 의미로
		//super();를 사용하며 이 때 부모쪽에 넘겨줄 수치값도 
		//함께 받아서 처리
		super(s);
	}
	
	public void fly() {
		//일반 비행(부모클래스의 fly)는 super.fly();
		//를 이용해서 호출 가능
		// 속도 900이하인 경우 일반 비행모드를 호출하게 하고
		//속도 900이상 1300이하인 경우는 초음속 비행을 호출
		if(speed >= 900 && speed <=1300) {
			System.out.println(" 시속 900이 넘어가 초음속 비행 호출합니다.");
		}else {
			System.out.println("일반 비행모드 전환");
			super.fly();
			
		}
		
	}
}
