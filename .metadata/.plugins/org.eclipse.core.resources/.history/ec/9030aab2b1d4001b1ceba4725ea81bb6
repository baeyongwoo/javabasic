package buyandsell;

public class Main2 {

	public static void main(String[] args) {
		Seller s1 = new Seller(100);	//100개 망고 팜
		Seller s2 = new Seller(100);		//50개 망고팜
		
		Buyer b1 = new Buyer(50000);	//50000원 가지고 나옴
		
		s1.showSeller();
		s2.showSeller();
		
		b1.buyMango(999, s1);//s1 상인에게 10개를 삼
		
		b1.showBuyer();	//구매자 정보 확인
		
		s1.showSeller();// 1번 상인 정보 확인
		s2.showSeller(); // 2번 상인 정보 확인
		
		
		

	}

}
