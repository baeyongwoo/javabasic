package Interaction.game;

public class Krilla {
	private int hp;
	private int atk;
	private int def;
	
	public void krila() {
		this.hp = 100;
		this.atk = 10;
		this.def = 3;
	}
	
	public void doBattle(int uAtk) {
		this.hp = (this.hp + this.def) - uAtk;
		if(this.hp <= 0) {
			System.out.println("이 크릴라는 이미 죽었습니다.");
		}
	}
	
	public int getAtk() {
		return this.atk;
	}
	public int getHp() {
		return this.hp;
	}
}
