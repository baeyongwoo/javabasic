package accessmodifier.game;

public class Night extends Commoner{
	
	public Night(String id) {
		super(id);
	}

	@Override
	public void hunt() {
		//기본 공격은 체력 10깎이고 경험치 30증가
		setHp(getHp() - 10);
		setExp(getExp() + 30);
		System.out.println(getId() + "는 몬스터를 기본 공격으로 잡아서. 체력은 " 
					+ 10 + "감소 하였고, 경험치는 "
					+ 30 + "증가 하였습니다.");
	}
	
	public void DoubleAttack() {
		//스킬은 마나 10 깎이고 경험치 50 증가
		setMp(getMp() - 10);
		setExp(getExp() + 50);
		System.out.println(getId() + "는 몬스터를 더블어택으로 잡아서."
					+ "경험치는 "
					+ getExp() + "마나는 "
					+ getMp() + "되었습니다.");
	}

}
